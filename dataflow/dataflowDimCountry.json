{
	"name": "dataflowDimCountry",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ParquetCountryCode",
						"type": "DatasetReference"
					},
					"name": "source"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "SnowflakeDimCountry",
						"type": "DatasetReference"
					},
					"name": "sinkDimCountry"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn"
				},
				{
					"name": "select"
				},
				{
					"name": "surrogateKey"
				}
			],
			"scriptLines": [
				"parameters{",
				"     jobid as string (uuid())",
				"}",
				"source(output(",
				"          country_code as string,",
				"          country_name as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet') ~> source",
				"surrogateKey derive(DI_JOB_ID = $jobid,",
				"          DI_LOAD_DATE = currentTimestamp(),",
				"          rownum = rownum,",
				"          country_code = upper(country_code)) ~> derivedColumn",
				"derivedColumn select(mapColumn(",
				"          COUNTRY_CODE = country_code,",
				"          COUNTRY_NAME = country_name,",
				"          COUNTRY_CODE_SK = rownum,",
				"          DI_JOB_ID,",
				"          DI_LOAD_DATE",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select",
				"source keyGenerate(output(rownum as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> surrogateKey",
				"select sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          COUNTRY_CODE_SK as decimal(10,0),",
				"          COUNTRY_CODE as string,",
				"          COUNTRY_NAME as string,",
				"          DI_JOB_ID as string,",
				"          DI_LOAD_DATE as date",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     truncate:true,",
				"     format: 'table',",
				"     mapColumn(",
				"          COUNTRY_CODE_SK,",
				"          COUNTRY_CODE,",
				"          COUNTRY_NAME,",
				"          DI_JOB_ID,",
				"          DI_LOAD_DATE",
				"     )) ~> sinkDimCountry"
			]
		}
	}
}
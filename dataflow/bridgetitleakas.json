{
	"name": "bridgetitleakas",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "SnowflakeDimCountry",
						"type": "DatasetReference"
					},
					"name": "sourceCountry"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "SnowflakeBridge",
						"type": "DatasetReference"
					},
					"name": "sink"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn"
				},
				{
					"name": "surrogateKey1"
				},
				{
					"name": "surrogateKey2"
				},
				{
					"name": "surrogateKey3"
				},
				{
					"name": "surrogateKey4"
				}
			],
			"scriptLines": [
				"parameters{",
				"     jobid as string (uuid())",
				"}",
				"source(output(",
				"          COUNTRY_CODE_SK as decimal(10,0),",
				"          COUNTRY_CODE as string,",
				"          COUNTRY_NAME as string,",
				"          DI_JOB_ID as string,",
				"          DI_LOAD_DATE as date",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'table') ~> sourceCountry",
				"surrogateKey4 derive(DI_JOB_ID = $jobid,",
				"          DI_LOAD_DATE = currentTimestamp()) ~> derivedColumn",
				"sourceCountry keyGenerate(output(rowNum as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> surrogateKey1",
				"surrogateKey1 keyGenerate(output(country as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> surrogateKey2",
				"surrogateKey2 keyGenerate(output(date as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> surrogateKey3",
				"surrogateKey3 keyGenerate(output(language as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> surrogateKey4",
				"derivedColumn sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          BRIDGE_TITLE_AKAS_SK as decimal(10,0),",
				"          COUNTRY_CODE_SK as decimal(10,0),",
				"          ISO_LANGUAGE_SK as decimal(10,0),",
				"          DI_JOB_ID as string,",
				"          DI_LOAD_DATE as date",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     stageInsert: true,",
				"     mapColumn(",
				"          BRIDGE_TITLE_AKAS_SK = rowNum,",
				"          COUNTRY_CODE_SK = country,",
				"          ISO_LANGUAGE_SK = language,",
				"          DI_JOB_ID,",
				"          DI_LOAD_DATE",
				"     )) ~> sink"
			]
		}
	}
}
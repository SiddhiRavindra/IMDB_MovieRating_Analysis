{
	"name": "dataflowDimLanguage",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DimlanguageParquet",
						"type": "DatasetReference"
					},
					"name": "sourcedimlanguageparquet"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "SnowflakeTable_NewDIMlanguage",
						"type": "DatasetReference"
					},
					"name": "sink"
				}
			],
			"transformations": [
				{
					"name": "surrogateKey"
				},
				{
					"name": "derivedColumn"
				},
				{
					"name": "select"
				}
			],
			"scriptLines": [
				"parameters{",
				"     jobid as string (uuid())",
				"}",
				"source(output(",
				"          language_name as string,",
				"          Endonym as string,",
				"          language_code as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet') ~> sourcedimlanguageparquet",
				"sourcedimlanguageparquet keyGenerate(output(rownum as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> surrogateKey",
				"surrogateKey derive(rownum = rownum,",
				"          DI_JOB_ID = $jobid,",
				"          DI_LOAD_DATE = currentTimestamp()) ~> derivedColumn",
				"derivedColumn select(mapColumn(",
				"          LANGUAGE_NAME = language_name,",
				"          ENDONYM = Endonym,",
				"          LANGUAGE_CODE = language_code,",
				"          ROWNUM = rownum,",
				"          DI_JOB_ID,",
				"          DI_LOAD_DATE",
				"     ),",
				"     skipDuplicateMapInputs: false,",
				"     skipDuplicateMapOutputs: false) ~> select",
				"select sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          ISO_LANGUAGE_SK as decimal(10,0),",
				"          LANGUAGE_CODE as string,",
				"          LANGUAGE_NAME as string,",
				"          DI_JOB_ID as string,",
				"          DI_LOAD_DATE as date,",
				"          ENDONYM as string",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     truncate:true,",
				"     format: 'table',",
				"     stageInsert: true,",
				"     mapColumn(",
				"          ISO_LANGUAGE_SK = ROWNUM,",
				"          LANGUAGE_CODE,",
				"          LANGUAGE_NAME,",
				"          DI_JOB_ID,",
				"          DI_LOAD_DATE,",
				"          ENDONYM",
				"     )) ~> sink"
			]
		}
	}
}
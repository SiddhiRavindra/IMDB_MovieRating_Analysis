{
	"name": "dataflowIsoLangStage",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ParquetISOLang",
						"type": "DatasetReference"
					},
					"name": "source"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "SnowflakeTableIsoLanguage",
						"type": "DatasetReference"
					},
					"name": "sink"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn"
				},
				{
					"name": "select"
				}
			],
			"scriptLines": [
				"parameters{",
				"     jobid as string (uuid())",
				"}",
				"source(output(",
				"          language_name as string,",
				"          Endonym as string,",
				"          language_code as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet') ~> source",
				"source derive(DI_JOB_ID = $jobid,",
				"          DI_LOAD_DT = currentTimestamp()) ~> derivedColumn",
				"derivedColumn select(mapColumn(",
				"          LANGUAGE_NAME = language_name,",
				"          ENDONYM = Endonym,",
				"          LANGUAGE_CODE = language_code,",
				"          DI_JOB_ID,",
				"          DI_LOAD_DT",
				"     ),",
				"     skipDuplicateMapInputs: false,",
				"     skipDuplicateMapOutputs: false) ~> select",
				"select sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          ISO_LANGUAGE_SK as decimal(38,0),",
				"          LANGUAGE_NAME as string,",
				"          ENDONYM as string,",
				"          LANGUAGE_CODE as string,",
				"          DI_JOB_ID as string,",
				"          DI_LOAD_DATE as date",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     truncate:true,",
				"     format: 'table',",
				"     stageInsert: true,",
				"     mapColumn(",
				"          LANGUAGE_NAME,",
				"          ENDONYM,",
				"          LANGUAGE_CODE,",
				"          DI_JOB_ID,",
				"          DI_LOAD_DATE = DI_LOAD_DT",
				"     )) ~> sink"
			]
		}
	}
}
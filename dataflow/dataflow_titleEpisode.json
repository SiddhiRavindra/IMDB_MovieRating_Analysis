{
	"name": "dataflow_titleEpisode",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "TitleEpisodeParquet",
						"type": "DatasetReference"
					},
					"name": "sourcetitleepisode"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "SnowflakeTable_title_episode",
						"type": "DatasetReference"
					},
					"name": "sinktitleEpisode"
				}
			],
			"transformations": [
				{
					"name": "derivedColumnTitleEpisode"
				},
				{
					"name": "selectColumns"
				}
			],
			"scriptLines": [
				"parameters{",
				"     jobid as string (uuid())",
				"}",
				"source(output(",
				"          tconst as string,",
				"          parentTconst as string,",
				"          seasonNumber as long,",
				"          episodeNumber as long",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet') ~> sourcetitleepisode",
				"sourcetitleepisode derive(DI_JOB_ID = $jobid,",
				"          DI_LOAD_DT = currentTimestamp()) ~> derivedColumnTitleEpisode",
				"derivedColumnTitleEpisode select(mapColumn(",
				"          TCONST = tconst,",
				"          PARENTTCONST = parentTconst,",
				"          SEASONNUMBER = seasonNumber,",
				"          EPISODENUMBER = episodeNumber,",
				"          DI_JOB_ID,",
				"          DI_LOAD_DT",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectColumns",
				"selectColumns sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          TCONST as string,",
				"          PARENTTCONST as string,",
				"          SEASONNUMBER as decimal(38,0),",
				"          EPISODENUMBER as decimal(38,0),",
				"          DI_JOB_ID as string,",
				"          DI_LOAD_DATE as date",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     truncate:true,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     stageInsert: true,",
				"     mapColumn(",
				"          TCONST,",
				"          PARENTTCONST,",
				"          SEASONNUMBER,",
				"          EPISODENUMBER,",
				"          DI_JOB_ID,",
				"          DI_LOAD_DATE = DI_LOAD_DT",
				"     )) ~> sinktitleEpisode"
			]
		}
	}
}